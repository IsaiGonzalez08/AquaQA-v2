generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  ADMIN
}

enum UserStatus {
  PENDING
  APPROVED
  REJECTED
}

model User {
  id                 String      @id @default(cuid())
  email              String      @unique
  password           String
  name               String
  lastname           String
  role               Role        @default(USER)
  status             UserStatus  @default(PENDING)
  problemDescription String?
  createdAt          DateTime    @default(now())
  updatedAt          DateTime    @updatedAt
}

